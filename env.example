# Server Configuration
PORT=3000
NODE_ENV=development
MAX_REQUEST_SIZE=10mb

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cs_compass
DB_USER=postgres
DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_very_long_and_secure
JWT_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=info

# Razorpay Configuration (DEPRECATED - Use PayU instead)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# PayU Payment Gateway Configuration
# Get these credentials from PayU merchant dashboard
# Test URL: https://test.payu.in
# Production URL: https://secure.payu.in
PAYU_MERCHANT_KEY=your_payu_merchant_key
PAYU_SALT=your_payu_salt
PAYU_BASE_URL=https://test.payu.in
# Optional: Custom callback URLs (defaults to SERVER_URL/api/courses/payment/*)
# PAYU_SUCCESS_URL=https://yourdomain.com/api/courses/payment/callback
# PAYU_FAILURE_URL=https://yourdomain.com/api/courses/payment/callback
# PAYU_CANCEL_URL=https://yourdomain.com/api/courses/payment/callback

# Twilio Configuration (DISABLED - Service disabled for basic functionality)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Email Configuration (DISABLED - Email service not implemented)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=50000000
ALLOWED_FILE_TYPES=application/pdf
